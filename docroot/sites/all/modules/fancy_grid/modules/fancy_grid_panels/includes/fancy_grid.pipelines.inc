/**
 * Implements hook_default_panels_renderer_pipeline().
 */
function fancy_grid_panels_default_panels_renderer_pipeline() {
  $pipelines = array();

  // Standard renderer.
  $pipeline = new stdClass;
  $pipeline->disabled = FALSE; /* Edit this to true to make a default pipeline disabled initially */
  $pipeline->api_version = 1;
  $pipeline->name = 'fancy_grid';
  $pipeline->admin_title = t('Fancy Grid Standard');
  $pipeline->admin_description = t('Adds Fancy Grid functionality to the default Panels renderer.');
  $pipeline->weight = -90;
  $pipeline->settings = array(
    'renderers' => array(
      0 => array(
        'access' => array(),
        'renderer' => 'fancy_grid',
        'options' => array(),
      ),
    ),
  );
  $pipelines[$pipeline->name] = $pipeline;

  // IPE renderer.
  $pipeline = new stdClass;
  $pipeline->disabled = FALSE; /* Edit this to true to make a default pipeline disabled initially */
  $pipeline->api_version = 1;
  $pipeline->name = 'fancy_grid_ipe';
  $pipeline->admin_title = t('Fancy Grid In-Place Editor');
  $pipeline->admin_description = t('Extends the Panels IPE with the Fancy Grid functionality.');
  $pipeline->weight = 10;
  $pipeline->settings = array(
    'renderers' => array(
      0 => array(
        'access' => array(),
        'renderer' => 'fancy_grid_ipe',
        'options' => array(),
      ),
    ),
  );
  $pipelines[$pipeline->name] = $pipeline;
  return $pipelines;
}
